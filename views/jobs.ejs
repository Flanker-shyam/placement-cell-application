<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Listings</title>
</head>
<body>

    <div id="jobListings">
        <!-- Job listings will be displayed here -->
    </div>

    <script>
        // Fetch the JSON file
        fetch('/student/scientist_job.json.json')
            .then(response => response.json())
            .then(data => {
                // Display the job listings on the page
                displayJobListings(data);
            })
            .catch(error => console.error('Error fetching JSON:', error));

        function displayJobListings(jobListings) {
            const jobListingsContainer = document.getElementById('jobListings');

            jobListings.forEach(job => {
                const jobDiv = document.createElement('div');
                jobDiv.innerHTML = `
                    <h2>${job.title}</h2>
                    <p><strong>Location:</strong> ${job.location}</p>
                    <p><strong>Employment Type:</strong> ${job.employment_type}</p>
                    <p><strong>Level:</strong> ${job.level}</p>
                    <p><strong>Category:</strong> ${job.category}</p>
                    <p><strong>Salary:</strong> ${job.salary_min} to ${job.salary_max} (${job.salary_type})</p>
                    <p><strong>Description:</strong> ${job.description}</p>
                    <p><strong>Requirements:</strong> ${job.requirements}</p>
                    <hr>
                `;

                jobListingsContainer.appendChild(jobDiv);
            });
        }
    </script>

</body>
</html>
